{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
<div class="ui pagination menu">
    {% if first is defined and current != first %}
        <a class="item first" href="{{ path(route, query|merge({(pageParameterName): first})) }}">
            <i class="angle double left icon"></i>
        </a>
    {% endif %}

    {% if previous is defined %}
        <a class="item previous" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
            <i class="angle left icon"></i>
        </a>
    {% endif %}

    {% for page in pagesInRange %}
        {% if page != current %}
            <a class="item page" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
        {% else %}
            <span class="item active current">{{ page }}</span>
        {% endif %}

    {% endfor %}

    {% if next is defined %}
        <a class="item next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
            <i class="angle right icon"></i>
        </a>
    {% endif %}

    {% if last is defined and current != last %}
        <a class="item last" href="{{ path(route, query|merge({(pageParameterName): last})) }}">
            <i class="angle double right icon"></i>
        </a>
    {% endif %}
</div>
{% endif %}
